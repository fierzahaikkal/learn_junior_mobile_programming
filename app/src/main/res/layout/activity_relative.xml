<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".activities.RelativeActivity">
    
    <TextView
        android:id="@+id/provinsiText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Pilih Provinsi"/>

    <Spinner
        android:id="@+id/provinsi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/provinsiText"
        android:entries="@array/sampleProvinsi"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/tombol"/>
    
    <Button
        android:id="@+id/tombol"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/provinsiText"
        android:layout_alignParentRight="true"
        android:text="OK"/>

    <TextView
        android:id="@+id/hasil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hasil"
        android:layout_below="@+id/provinsi"/>

</RelativeLayout>